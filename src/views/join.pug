extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="이메일", name="email", type="email", required)
        input(placeholder="비밀번호", name="password", type="password", required)
        input(placeholder="비밀번호확인", name="confirmPassword", type="password", required)
        input(placeholder="닉네임", name="nickname", type="text", required)
        input(type="submit", value="회원가입")